use pulse::component { Container, Input, Button, Icon, Text, Logo }
use core::controller { Auth, Accounts }

component main App {
    state enable: boolean = true
    @mount accounts.load, FadeIn
    MyForm {
     @enabled = enable;
    }
}
component MyForm {
	prop enabled?: boolean = true
    Container FormContainerStyle {
        Logo->LogoRef LogoStyle {}
        Text h1 bold moniker { "Something cool here..." }
        Input InputStyle { 
            @email true, "Email Here"
            @state Auth.CREDS.email
            Icon {
                @svg "email"
                @size 22
            }
        }
        Input InputStyle {
            @password true
            @state Auth.CREDS.password
        }
        Button ButtonStyle {
            @text "Submit"
            @onPress if enabled Auth.CREDS.email else shake()
            @style padding: 10 20, center, grow, background: theme.accent
            if waiting {
                Spinner SpinnerStyle {}
                LogoRef.Animate()
            }
        }
	}
}

style FormContainerStyle {
    margin: 5 mobile(0) tablet(3)
    maxWidth: 200
    shadow: 0 0 200 theme.shadow
    spaceBetween: 10
}

style InputStyle {
    padding: 10 5
    borderRadius: 5
    background: theme.inputBackground
}

animation FadeIn {
    @duration 200
    @frame opacity 0
    @frame opacity 1
}

component SomethingElse {
    @class "some-custom-classname"
    @touchable pressOpacity: 0.5
    View MyStyle {
        @style row, cornerRadius: 4, fill: theme.box

    }
}



